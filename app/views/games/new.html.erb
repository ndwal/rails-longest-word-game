<div class="container">
  <div class="col-6 mt-2">
    <h2><%= @letters.split('') %></h2>

    <p>What is the longuest word you can find?</p>
    <form action="/score" method="get" data-turbo="false">
      <%= hidden_field_tag 'letter_list', @letters %>
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      <div class="input-group mb-3">
        <input class="form-control" type="text" name="user_answer">
        <input class="btn btn-outline-secondary" type="submit" value="Play">
      </div>
    </form>
  </div>
</div>
